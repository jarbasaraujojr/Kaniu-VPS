# Supabase - Obrigatório
NEXT_PUBLIC_SUPABASE_URL=sua_url_do_supabase
NEXT_PUBLIC_SUPABASE_ANON_KEY=sua_chave_anonima_do_supabase

# Next.js - Configurações do ambiente
NODE_ENV=production
PORT=3000

# URLs do sistema - Ajuste para seus domínios
NEXT_PUBLIC_APP_URL=https://seu-dominio.com
NEXT_PUBLIC_API_URL=https://seu-dominio.com/api

# Configurações de upload - Opcional
NEXT_PUBLIC_MAX_FILE_SIZE=5242880 # 5MB em bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Configurações de email - Se implementar notificações
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=Kaniu

# Configurações do site - Customização
NEXT_PUBLIC_SITE_NAME=Kaniu
NEXT_PUBLIC_SITE_DESCRIPTION="Plataforma de adoção de animais"
NEXT_PUBLIC_CONTACT_EMAIL=contato@kaniu.org
NEXT_PUBLIC_SOCIAL_TWITTER=
NEXT_PUBLIC_SOCIAL_FACEBOOK=
NEXT_PUBLIC_SOCIAL_INSTAGRAM=

# Configurações de segurança - Opcional
NEXTAUTH_URL=https://seu-dominio.com
NEXTAUTH_SECRET=gere_uma_chave_secreta_forte

# Cache e performance - Opcional
NEXT_PUBLIC_CDN_URL=
CACHE_TTL=3600